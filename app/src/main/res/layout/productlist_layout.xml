<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    android:layout_height="85dp">

    <TextView
        android:id="@+id/textview_menuname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Food Name:- "
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_menucategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_menuname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="category"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/textview_menuprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_menuname"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/textview_menucategory"
        android:text="Price"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/textview_menuprice"
        />

</RelativeLayout>